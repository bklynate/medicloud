package provider;

import java.util.List;

import javax.mail.internet.MimeMessage;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.mail.javamail.JavaMailSender;
import org.springframework.stereotype.Service;

@Service("mailService")
public class Mailer {
	
	@Autowired
	private JavaMailSender jSender;
	
	public Mailer(JavaMailSender newSender) {
		jSender = newSender;
	}
	
	public static boolean send(MimeMessage mailMessage) {
		return true;
	}
	
	public static boolean send(String recipients, String subject, String body) {
		return true
	}
}
